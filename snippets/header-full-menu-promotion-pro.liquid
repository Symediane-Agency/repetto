{{ 'mega-menu-promotion-pro.css' | asset_url | stylesheet_tag }}
<div class="mega-menu-promotion-pro {{ extend_class }}">
  <div class="mega-menu-promotion-title">
    {%- if promotion_heading -%}
      <p class="heading-font">{{ promotion_heading | upcase }}</p>
    {%- endif -%}
  </div>
  {%- if promotion_link != empty and promotion_image != empty -%}
    <a href="{{ promotion_link }}" >
      {%- render 'responsive-image', image: promotion_image, sizes: '670x0' -%}
    </a>
  {%- endif -%}
</div>