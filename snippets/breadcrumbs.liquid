{{ 'breadcrumbs.css' | asset_url | stylesheet_tag }}
<nav class="breadcrumbs" aria-label="breadcrumbs">
  <div>
    <a href="{{ routes.root_url }}" title="{{ 'sections.breadcrumbs.home' | t | escape }}">
      <i>
        {% render 'svg-icons' with 'home-icon' %}
      </i>
    </a>
   {% if routes.root_url != '/' and routes.root_url != '/fr' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
    {% endif %}
    {% if collection.url %}
      <a href="{{ routes.root_url }}" title="{{ 'sections.breadcrumbs.shop' | t | escape }}">{{ 'sections.breadcrumbs.shop' | t }}</a>
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      <a href="{{ collection.url }}" title="{{ collection.title | escape }}">{{ collection.title }}</a>
    {% endif %}
    {% if template contains 'cart' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ 'sections.breadcrumbs.cart' | t }}
    {% endif %}
    {% if template contains 'product' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ product.title }}
    {% endif %}
    {% if template contains 'blog' %}
      {% if current_tags %}
        <i>
          {% render 'svg-icons' with 'split-icon' %}
        </i>
        <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title }}</a>
        <i>
          {% render 'svg-icons' with 'split-icon' %}
        </i>
        {{ current_tags }}
      {% else %}
        <i>
          {% render 'svg-icons' with 'split-icon' %}
        </i>
        {{ blog.title }}
      {% endif %}
    {% endif %}
    {% if template contains 'article' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title }}</a>
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ article.title }}
    {% endif %}
    {% if template contains 'page' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ page.title }}
    {% endif %}
    {% if template contains 'search' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ 'sections.breadcrumbs.search' | t }}
    {% endif %}
    {% if template contains 'customers' %}
      <i>
        {% render 'svg-icons' with 'split-icon' %}
      </i>
      {{ 'sections.breadcrumbs.my_account' | t }}
    {% endif %}
  </div>
  <div class="social-links widget widget--text pc-social-links">
    {%- render 'social-links' -%}
  </div>
</nav>