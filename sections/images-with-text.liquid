{{ 'images-with-text.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign heading_size = section.settings.heading_size
  assign content_size = section.settings.content_size
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign button_link = section.settings.button_link
  assign button_text = section.settings.button_text
-%}

<div class="row expanded images-with-text">
  <span class="pc-show">
    {% render 'images-with-text' with section.settings, isMobile: false %}
  </span>
  <span class="mob-show">
    {% render 'images-with-text' with section.settings, isMobile: true %}
    <div class="title">
      <h3 class="{{ heading_size }}">{{ heading | newline_to_br }}</h3>
      <div class="rte {{ content_size }}">{{ content }}</div>
      {% if button_text != blank %}
        <a
          class="button"
          href="{{button_link}}"
          role="button"
          title="{{ button_text | escape }}"
        >
          <span>{{ button_text }}</span>
        </a>
      {% endif %}
    </div>
  </span>
</div>

{% schema %}
{
  "name": "Images with text",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_big_background_bg",
      "label": "Left big image",
      "info": "554 x 350 px .jpg recommended."
    },
    {
      "type": "checkbox",
      "id": "left_big_background_bg_mobile",
      "label": "Left big image show in mobile"
    },
    {
      "type": "image_picker",
      "id": "left_small_background_bg",
      "label": "Left small image",
      "info": "352 x 219 px .jpg recommended."
    },
    {
      "type": "checkbox",
      "id": "left_small_background_bg_mobile",
      "label": "Left small image show in mobile"
    },
    {
      "type": "image_picker",
      "id": "right_background_bg",
      "label": "Right image",
      "info": "704 x 788 px .jpg recommended."
    },
    {
      "type": "checkbox",
      "id": "right_background_bg_mobile",
      "label": "Right image show in mobile"
    },
    {
      "type": "header",
      "content": "Rich text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h1",
          "label": "Extra Large"
        },
        {
          "value": "h2",
          "label": "Large"
        },
        {
          "value": "h3",
          "label": "Medium"
        },
        {
          "value": "h4",
          "label": "Small"
        }
      ],
      "default": "h3"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "select",
      "id": "content_size",
      "label": "Content Size",
      "options": [
        {
          "value": "text-size-large",
          "label": "Large"
        },
        {
          "value": "text-size-regular",
          "label": "Normal"
        }
      ],
      "default": "text-size-regular"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "id": "button_text",
      "type": "text",
      "label": "Button label",
      "default": "Shop Now",
      "info": "Leave the label blank to hide the button."
    },
    {
      "id": "button_link",
      "type": "url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Images with text"
    }
  ]
}
{% endschema %}
